# Database Configuration for Auth Service
DATABASE_URL="postgresql://auth_admin:secure_password_123@localhost:5432/auth_db?schema=public"

# Application Configuration
NODE_ENV=production
PORT=3001

# Database Connection Details (for reference)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_admin
DB_PASSWORD=secure_password_123

# PostgreSQL Container Environment Variables
POSTGRES_DB=auth_db
POSTGRES_USER=auth_admin
POSTGRES_PASSWORD=secure_password_123
POSTGRES_INITDB_ARGS="--auth-host=scram-sha-256 --auth-local=scram-sha-256"


# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# API Configuration
API_VERSION=v1

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3001